<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/betterpayment/webhook" method="GET">
        <service class="BetterPayment\Core\Api\WebhookInterface" method="handle"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/betterpayment/transaction" method="GET">
        <service class="BetterPayment\Core\Api\Transaction" method="getRedirectUrl"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>
