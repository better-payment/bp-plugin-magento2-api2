<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <preference for="BetterPayment\Core\Api\WebhookInterface" type="BetterPayment\Core\Api\Webhook"/>

    <virtualType name="CreditCardFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">BetterPayment\Core\Model\PaymentMethods\CreditCard::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form\Cc</argument>
            <argument name="infoBlockType" xsi:type="string">Magento\Payment\Block\ConfigurableInfo</argument>
            <argument name="valueHandlerPool" xsi:type="object">BetterPaymentValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">BetterPaymentCommandPool</argument>
<!--            <argument name="validatorPool" xsi:type="object">CreditCardValidatorPool</argument>-->
        </arguments>
    </virtualType>

    <!--  BetterPaymentValueHandlerPool START  -->
    <virtualType name="BetterPaymentValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">BetterPaymentConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="BetterPaymentConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">BetterPaymentConfig</argument>
        </arguments>
    </virtualType>

    <virtualType name="BetterPaymentConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">BetterPayment\Core\Model\PaymentMethods\CreditCard::CODE</argument>
        </arguments>
    </virtualType>
    <!--  BetterPaymentValueHandlerPool END  -->

    <!--  BetterPaymentCommandPool START  -->
    <virtualType name="BetterPaymentCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">BetterPaymentAuthorizeCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="BetterPaymentAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">BetterPaymentAuthorizeRequestBuilder</argument>
            <argument name="transferFactory" xsi:type="object">BetterPayment\Core\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">BetterPayment\Core\Gateway\Http\Client\BetterPaymentClient</argument>
            <argument name="handler" xsi:type="object">BetterPayment\Core\Gateway\Response\CreditCardHandler</argument>

<!--            <argument name="logger" xsi:type="object"></argument>-->
<!--            <argument name="validator" xsi:type="object">Magento\Braintree\Gateway\Validator\ResponseValidator</argument>-->
<!--            <argument name="errorMessageMapper" xsi:type="object">Magento\Braintree\Gateway\ErrorMapper\VirtualErrorMessageMapper</argument>-->
        </arguments>
    </virtualType>

    <virtualType name="BetterPaymentAuthorizeRequestBuilder" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="common" xsi:type="string">BetterPayment\Core\Gateway\Request\CommonDataBuilder</item>
                <item name="redirect_url" xsi:type="string">BetterPayment\Core\Gateway\Request\RedirectUrlDataBuilder</item>
                <item name="billing_address" xsi:type="string">BetterPayment\Core\Gateway\Request\BillingAddressDataBuilder</item>
                <item name="shipping_address" xsi:type="string">BetterPayment\Core\Gateway\Request\ShippingAddressDataBuilder</item>
                <item name="risk_check" xsi:type="string">BetterPayment\Core\Gateway\Request\RiskCheckDataBuilder</item>
                <item name="company" xsi:type="string">BetterPayment\Core\Gateway\Request\CompanyDataBuilder</item>
<!--                <item name="specific" xsi:type="string">BetterPayment\Core\Gateway\Request\SpecificDataBuilder</item>-->
            </argument>
        </arguments>
    </virtualType>
    <!--  BetterPaymentCommandPool END  -->
</config>
